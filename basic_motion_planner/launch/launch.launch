<!-- -*- mode: XML -*- -->
<launch>
  <arg name="racecar_version" default="racecar-v2" />
  <arg name="run_camera" default="false"/>

  <include file="$(find racecar)/launch/includes/$(arg racecar_version)-teleop.launch.xml">
    <arg name="racecar_version" value="$(arg racecar_version)" />
    <arg name="run_camera" value="$(arg run_camera)" />
  </include>

  <node name="rplidar_ros" pkg="rplidarNode" type="rplidar_ros" output="screen">
  </node>

  <node name="bmp" pkg="basic_motion_planner" type="bmp" output="screen">
  </node>

  <node name="rplidar_ros_client" pkg="rplidarNodeClient" type="rplidar_ros" output="screen">
  </node>
</launch>
